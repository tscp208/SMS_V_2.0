@model IEnumerable<SMS.Models.UserType.UserTypeViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-11">
        <div class="panel-heading">
            <h3>User Types</h3>

        </div>
    </div>
    <div class="col-lg-1 pt30">
        <input type="button" value="Add User Type" class="btn btn-default pull-right pr30" />
    </div>

    <div class="col-lg-12">

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SrNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserTypeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserTypeDesc)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SrNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTypeDesc)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.UserTypeID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.UserTypeID })
                            </td>
                        </tr>
                        }
                </table>
            </div>
        </div>
    </div>
    </div>


