@model IEnumerable<SMS.Models.UserType.UserTypeViewModel>
<div class="row">
    <div class="col-lg-12">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SrNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserTypeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserTypeDesc)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SrNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTypeDesc)
                            </td>
                            <td style="align-content:center;">
                                @Html.ActionLink(" ", "Edit", "UserType", new { id = item.UserTypeID }, new { @class = "glyphicon glyphicon-edit", style = "font-size:18px" }) |
                                @Html.ActionLink(" ", "Delete", "UserType", new { id = item.UserTypeID }, new { @class = "glyphicon glyphicon-remove", style = "font-size:18px;color:#ff000094;", onclick = "return confirm('Are you sure you want to delete this User Type?');" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>